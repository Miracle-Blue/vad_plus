<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="dev.miracle.vad_plus">

  <!-- Required for microphone access -->
  <uses-permission android:name="android.permission.RECORD_AUDIO" />

  <!-- Optional: May help with audio processing -->
  <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

  <application>
    <!-- Content provider for automatic initialization -->
    <provider android:name=".VadPlusInitProvider" android:authorities="${applicationId}.vadplusinitprovider" android:exported="false" android:initOrder="100" />
  </application>

</manifest>
